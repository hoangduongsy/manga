<h2>Series Management</h2>

<h3><%= @manga.name %></h3>


<%= form_for @manga do |f| %>
	<div><%= f.label 'Name:' %> <%= f.text_field :name %></div>
	<div><%= f.label 'Synopsis:' %> <%= f.text_area :synopsis, :id => 'synopsis_text_area' %></div>

	<div>	
		<%= f.submit :class => "btn" %>
<% end %>
